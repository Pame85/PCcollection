<section class="container">
  <section class="row">
    <section class="col-md-12 py-5">
      <%= link_to 'Back', root_path, class: 'text-underline' %>
      <h2>Products</h2>
      <div id="products">
        <% if @products.any? %>
          <section class="row">
            <% @products.each do |product| %>
              <section class="col-md-4 mb-3">
                <section class="card h-100">
                  <section class="card-body">
                    <%= link_to site_product_path(product) do %>
                      <p class="mb-0"><%= product.name %></p>
                      <p class="mb-0"><%= number_to_currency(product.price) %></p>
                    <% end %>
                  </section>
                </section>
              </section>
            <% end %>
          </section>
        <% else %>
          <section class="row">
            <section class="col-md-12">
              <p>No products found.</p>
            </section>
          </section>
        <% end %>
      </div>
    </section>
  </section>
</section>