<%= simple_form_for([:admin, @collection]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :sku %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.input :available %>
    <%= f.input :product_ids, collection: Product.available, input_html: { multiple: true }, label: 'Choose products' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
  