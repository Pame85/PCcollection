<section class="row">
  <section class="col-md-6">
    <h1>Products</h1>
  </section>
  <section class="col-md-6 text-end">
    <%= link_to 'Add Product', new_admin_product_path, class: 'btn btn-outline-primary' %>
  </section>
</section>

<section class="table-responsive">
  <table class="table table-bordered">
    <thead class="text-center">
      <tr>
        <td>No</td>
        <td>Name</td>
        <td>Price</td>
        <td>Action</td>
      </tr>
    </thead>
    <% @products.each_with_index do |product, index| %>
      <tr class="text-center">
        <td><%= index + 1 %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td>
          <%= link_to admin_product_path(product) do %>
            <i class="far fa-arrow-alt-circle-right" style="color: #af49df;"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</section>